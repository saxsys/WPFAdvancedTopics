<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="ButtonBaseStyle" TargetType="Button">
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Height" Value="50" />
    <Setter Property="Width" Value="50" />
    <Setter Property="Background" Value="LightBlue" />
  </Style>

  <Style TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}" />
  
  <Style x:Key="NumberButtonStyle" BasedOn="{StaticResource ButtonBaseStyle}" TargetType="Button">
    <Setter Property="Background" Value="LightGray" />    
  </Style>
  
  <Style x:Key="WideButtonStyle" BasedOn="{StaticResource ButtonBaseStyle}" TargetType="Button">
    <Setter Property="Height" Value="50" />
    <Setter Property="Width" Value="100" />
  </Style>

  <Style x:Key="NumberWideButtonStyle" BasedOn="{StaticResource WideButtonStyle}" TargetType="Button">
    <Setter Property="Background" Value="LightGray" />
  </Style>

  <Style x:Key="HighButtonStyle" BasedOn="{StaticResource ButtonBaseStyle}" TargetType="Button">
    <Setter Property="Height" Value="100" />
    <Setter Property="Width" Value="50" />
  </Style>
  
</ResourceDictionary>